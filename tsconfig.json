{
    "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "sourceMap": true,
      "downlevelIteration": true,
      "strict": true
    },
    "include": [
      "./src/**/*",
      "./test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }